<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.shutterstock.com/image-photo/colorful-abstract-background-film-striporange-600nw-2342004053.jpg);">
  <div class="container">
    <h1> Your Movie Lists </h1>
    <p> Save your favorite movies and rate them. </p>
  </div>
  <%= link_to 'Create List', new_list_path, class:"btn btn-primary" %>
</div>


<div class="tank">
  <% @lists.each do |list| %>
    <div class="card-product">
      <% if list.movies.length > 0 %>
        <img src="<%= list.movies[0].poster_url %>" />
      <% else %>
        <img src="https://cdn11.bigcommerce.com/s-5ylnei6or5/images/stencil/1280x1280/products/792/862/550-Film-Clapper__82727.1497284123.jpg?c=2" />
      <% end %>
      <div class="card-product-infos">
        <h2><%= list.name %></h2>
        <p><%= link_to 'See List', list_path(list), class:"btn" %></p>
      </div>
    </div>
  <% end %>
</div>
